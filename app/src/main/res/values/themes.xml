<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VideoGameSearcher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryVariant">@color/lightModeStatusBar</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarColor</item>

        <!--Attributes-->
        <item name="primaryColor">@color/lightestMustacheColor</item>
        <item name="onPrimary">@color/black</item>
        <item name="outlineColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="onBackground">@color/black</item>
        <item name="appBar">@color/darkAppBarGrey</item>
        <item name="onAppBar">@color/white</item>
        <item name="cardViewBackground">@color/lightModeCardViewColor</item>
        <item name="statusBarColor">@color/lightModeStatusBar</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>

    </style>


    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorHint">?attr/textColor</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="ExploreEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">?attr/primaryColor</item>
        <item name="colorControlNormal">?attr/onBackground</item>
        <item name="android:textColorHint">?attr/textColor</item>

    </style>

    <style name="SpinnersStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="colorControlActivated">?attr/primaryColor</item>
        <item name="colorControlHighlight">?attr/primaryColor</item>
        <item name="backgroundTint">?attr/onBackground</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/search_view_cursor</item>
    </style>


</resources>