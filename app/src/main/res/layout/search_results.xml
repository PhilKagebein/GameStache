<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="exploreviewmodel"
            type="com.example.gamestache.ui.explore.ExploreViewModel"/>

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/searchResultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/searchResultVerticalMargin"
        >

            <ImageView
                android:id="@+id/gameArtThumbNail"
                android:layout_width="@dimen/artImageViewWidth"
                android:layout_height="@dimen/artImageViewHeight"
                android:layout_gravity="start"
                android:scaleType="fitCenter"
                android:layout_marginEnd="@dimen/artImageViewEndMargin"
                android:contentDescription="@string/game_art_thumbnail_content_description"
                />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/searchResults"
        android:layout_gravity="top|start"
        >

        <TextView
            android:id="@+id/tvGameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="bold"
            android:layout_gravity="top|start"
            android:textColor="?attr/textColor"
            />

        <TextView
            android:id="@+id/tvGamePlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/platformTextSize"
            android:textColor="?attr/textColor"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/tvGameGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/genreTextSize"
            android:textColor="?attr/textColor"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/tvGameModes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/multiplayerTextSize"
            android:textColor="?attr/textColor"
            android:textStyle="normal"
            />

    </LinearLayout>

    </LinearLayout>

</layout>